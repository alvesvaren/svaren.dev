---
import Base from "../layouts/base.astro";
interface ProjectProps {
    title: string;
    description: string;
    tags: string[];
    repo: string;
    astro: {
        html: string;
    };
}

const {
    title,
    description,
    tags,
    repo,
    astro: { html },
}: ProjectProps = Astro.props.content;
---

<Base {title}>
    <a href={repo} target="_blank">View project on GitHub</a>
    <div>{html}</div>

    <footer>
        <h2>Tags:</h2>
        <ul>
            {tags.map((tag) => (
                <li key={tag}>
                    <a class="tag" href={"/tag/" + tag}>
                        {tag}
                    </a>
                </li>
            ))}
        </ul>
    </footer>
</Base>
