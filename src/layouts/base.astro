---
import NavBar from "../components/navbar.tsx";
const { title, tabTitle, description } = Astro.props;
const currentYear = new Date().getFullYear();
const realTitle = `${tabTitle || title} - svaren.dev`
---

<html lang="en">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta charSet="UTF-8" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossOrigin="" />
        <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500&display=swap" rel="stylesheet" />
        <link rel="stylesheet" href={Astro.resolve('../styles/global.scss')} />
        <title>{realTitle}</title>
        <meta name="title" content={realTitle}>
        {description && <meta name="description" content={description || ""}>}
    </head>
    <body>
        <NavBar />
        <main>
            <h1>{title}</h1>
            <slot />
        </main>
        <footer>&copy; {currentYear} Alve Svar√©n</footer>
    </body>
</html>
